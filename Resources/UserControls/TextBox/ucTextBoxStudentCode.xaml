             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CollegeExam.Resources.UserControls.TextBox"
             mc:Ignorable="d" 
             d:DesignHeight="40" 
             d:DesignWidth="265">
    <UserControl.Resources>
        <ResourceDictionary  Source="/CollegeExam;component/Resources/Style/DefaultStyle.xaml"/>
    </UserControl.Resources>
    
    <Grid>
        <TextBox x:Name="txtStudentCode" Style="{DynamicResource placeHolder}" Tag="شماره دانش آموزی را وارد کنید" TextChanged="TxtStudentCode_TextChanged" MaxLength="15" MaxLines="1"/>
    </Grid>
    
</UserControl>
