<UserControl x:Class="CollegeExam.Resources.UserControls.Buttons.ucButtonEnable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CollegeExam.Resources.UserControls.Buttons"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="110">
    <Border x:Name="BorderButton" BorderBrush="Black" BorderThickness="2" FlowDirection="RightToLeft" Background="LightGray" Focusable="True" Cursor="Hand" MouseMove="Border_MouseMove" MouseEnter="BorderButton_MouseEnter" MouseLeave="BorderButton_MouseLeave" CornerRadius="3">
        <Grid FlowDirection="RightToLeft"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="3"/>
                <RowDefinition />
                <RowDefinition Height="3"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3" />
                <ColumnDefinition/>
                <ColumnDefinition Width="3"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                <fa:ImageAwesome x:Name="btnSave1" Icon="AreaChart" Width="20" Height="20" Foreground="Black" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock  VerticalAlignment="Center" Foreground="Black"  Grid.Column="2" Grid.Row="1" Padding="5" >فعال کردن</TextBlock>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
